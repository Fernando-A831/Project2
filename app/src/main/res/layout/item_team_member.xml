<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/teamMemberPosition"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="#1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#2196F3"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/teamMemberImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toEndOf="@id/teamMemberPosition"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/teamMemberImage"
            android:layout_toStartOf="@id/teamDeleteButton"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teamMemberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charizard"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/teamMemberTypes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Fire, Flying"
                android:textSize="14sp"
                android:textColor="#757575" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/teamDeleteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Remove" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome, Trainer!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:padding="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose an option:"
        android:textSize="18sp"
        android:textColor="#757575"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/randomPokemonButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Random Pokémon"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#FF5722"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/searchPokemonButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Pokémon"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#9C27B0"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/wishlistButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Wishlist"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#FF9800"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/teamBuilderButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team Builder"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#2196F3"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="14sp"
        android:background="#757575"
        android:textColor="#FFFFFF"
        android:padding="12dp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project2"
        android:usesCleartextTraffic="true">

        <!-- Random Pokémon screen -->
        <activity
            android:name=".RandomPokemonActivity"
            android:exported="false" />

        <!-- Landing page after login -->
        <activity
            android:name=".LandingPageActivity"
            android:exported="false" />

        <!-- Search Pokémon by name screen -->
        <activity
            android:name=".SearchPokemonActivity"
            android:exported="false" />

        <!-- Wishlist feature screens -->
        <activity
            android:name=".WishlistActivity"
            android:exported="false" />

        <activity
            android:name=".CompareDetailActivity"
            android:exported="false" />

        <activity
            android:name=".FriendComparisonActivity"
            android:exported="false" />

        <!-- Login screen -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Project2" />
        <activity android:name=".AdminActivity" />

        <!-- Entry point / launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
